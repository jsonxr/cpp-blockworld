{
  "version": 6,
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default Config",
      "description": "Default build",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_OSX_SYSROOT": "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk",
        "CMAKE_CXX_COMPILER": "/opt/homebrew/opt/llvm/bin/clang++",
        "CMAKE_CXX_FLAGS": "-stdlib=libc++ -fexperimental-library",
        "CMAKE_EXPORT_COMPILE_COMMANDS": true,
        "CMAKE_PROJECT_TOP_LEVEL_INCLUDES": "conan_provider.cmake",
        "CMAKE_CXX_STANDARD": "20"
      }
    },
    {
      "name": "Debug",
      "inherits": "default",
      "displayName": "Debug Config",
      "description": "Debug build"
    },
    {
      "name": "Release",
      "inherits": "default",
      "displayName": "Release Config",
      "description": "Release build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "wasm",
      "inherits": "default",
      "displayName": "Emscripten Debug",
      "description": "Debug WebAssembly build with Emscripten",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_SYSTEM_NAME": "Emscripten",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/libs/emsdk/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake",
        "CMAKE_C_COMPILER": "${sourceDir}/libs/emsdk/upstream/emscripten/emcc",
        "CMAKE_CXX_COMPILER": "${sourceDir}/libs/emsdk/upstream/emscripten/em++",
        "CONAN_HOST_PROFILE": "${sourceDir}/profiles/emscripten"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    },
    {
      "name": "Release",
      "configurePreset": "Release"
    },
    {
      "name": "Debug",
      "configurePreset": "Debug"
    },
    {
      "name": "wasm",
      "configurePreset": "wasm"
    }
  ]
}
